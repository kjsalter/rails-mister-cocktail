<div class="container">
  <div style="text-align: center">
    <h1>Cocktail details</h1>
  </div>

  <div class="col-md-offset-3 col-md-6">
    <h2><%= @cocktail.name %>
    <%= link_to edit_cocktail_path(@cocktail) do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %>
    <%= link_to @cocktail, method: :delete, data: { confirm: 'Are you sure?' }  do %>
      <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %>
    </h2>
    <br>
    <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo.path, width: 500, height: 300, crop: :fill %>
    <% end %>

    <h4>Ingredient list:
       <%= link_to new_cocktail_dose_path(@cocktail) do %>
         <i class="fa fa-plus-circle" aria-hidden="true"></i>
       <% end %>
    </h4>

    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <strong><%= dose.ingredient.name %></strong> - <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
        <% end %>
      </li>
      <% end %>
    </ul>
    <br>
    <%= link_to "Back to all cocktail list", cocktails_path %>
  </div>
</div>
