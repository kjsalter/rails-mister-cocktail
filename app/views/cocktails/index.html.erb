<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
          url('<%= cl_image_path cocktail.photo.path, height: 300, width: 400, crop: :fill %>')">
          <div class="card-name">
            <%= cocktail.name %>
          </div>
          <% if cocktail.photo? %>
            <%= link_to "", cocktail_path(cocktail), class:"card-link"%>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'cocktail-add.png' %>')";>
        <%= link_to "", new_cocktail_path, class:"card-link"%>
      </div>
    </div>
  </div>
</div>
